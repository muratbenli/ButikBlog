@model DashboardIndexViewModel
@{
    ViewBag.Title = "Anasayfa";
    ViewBag.HeaderTitle = "Yönetim Paneli";
}


<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.CategoryCount</h3>    

                <p>Kategori</p>
            </div>
            <div class="icon">
                <i class="fas fa-folder"></i>
            </div>
            <a href="@Url.Action("Index","Categories")" class="small-box-footer">Detaylı Bilgi <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.PostCount</h3>

                <p>Yazılar</p>
            </div>
            <div class="icon">
                <i class="fas fa-file-signature"></i>
            </div>
            <a href="@Url.Action("Index","Posts")" class="small-box-footer">Detaylı Bilgi <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-gradient-warning">
            <div class="inner" style="color:mediumpurple">
                <h3>@Model.UserCount</h3>

                <p>Kullanıcılar</p>
            </div>
            <div class="icon">  
                <i class="ion ion-person-add"></i>
            </div>
            <a href="@Url.Action("Index","Users")" class="small-box-footer">Detaylı Bilgi <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.CommentCount</h3>

                <p>Yorumlar</p>
            </div>
            <div class="icon">
                <i class="fas fa-comments"></i>
            </div>
            <a href="@Url.Action("Index","Comments")" class="small-box-footer">Detaylı Bilgi <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>
<!-- /.row -->
