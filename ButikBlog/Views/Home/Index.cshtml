@model List<Post>
@{
    ViewBag.Title = "Home Page";
}

<h3 class="pb-4 mb-4 font-italic border-bottom">
    @ViewBag.SubTitle
</h3>

@foreach (var item in Model)
{
    <div class="blog-post">
        <h2 class="blog-post-title">@item.Title</h2>
        <p class="blog-post-meta">@item.CreationTime <a href="#"> @item.Author.UserName</a></p>

        @Html.Raw(item.Content)
    </div><!-- /.blog-post -->
}



    <nav class="blog-pagination">
        @if (ViewBag.page < ViewBag.pageCount)
        {
            <a class="btn btn-outline-primary" href="@Url.Action("Index","Home",new
                                        {
                                            cid = ViewBag.cid,
                                            page = ViewBag.nextPage
                                        })">
                <i class="fas fa-angle-double-left"></i> Daha Eski
            </a>
        }
        else
        {
            <a class="btn btn-outline-secondary disabled" href="#" tabindex="-1" aria-disabled="true">
                <i class="fas fa-angle-double-left"></i> Daha Eski
            </a>
        }

        @if (ViewBag.page > 1)
        {
            <a class="btn btn-outline-primary " href="@Url.Action("Index","Home",new
                                           {
                                               cid = ViewBag.cid,
                                               page = ViewBag.prevPage
                                           })">
                Daha Yeni <i class="fas fa-angle-double-right"></i>
            </a>

        }
        else
        {
            <a class="btn btn-outline-secondary disabled" href="#" tabindex="-1" aria-disabled="true">
                Daha Yeni <i class="fas fa-angle-double-right"></i>
            </a>
        }
    </nav>
